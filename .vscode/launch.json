  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--colors",
        "-r",
        "ts-node/register",
        "--timeout",
        "999999",
        "${workspaceFolder}/test/**/**/*.spec.ts"
      ],
      "env": {
        "HOME": "/tmp/proxy-test"
      },
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Launch(ZanProxy)",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "sourceMaps": true,
      "env": {
        "DEBUG": "1"
      },
      "args": [
        "-r",
        "ts-node/register",
        "--nolazy",
        "${workspaceRoot}/src/bin/index.ts",
        "--no-update",
        "--no-sync"
      ]
    }
  ]
}
